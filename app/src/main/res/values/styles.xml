<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">#FFFFFF</item>
    </style>

    <style name="MainFrTitle">
        <item name="android:text">@string/quiz</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="MainFrImageView">
        <item name="android:layout_width">@dimen/main_image_width</item>
        <item name="android:layout_height">@dimen/main_image_height</item>
        <item name="android:layout_marginTop">@dimen/top_margin_from_title</item>
        <item name="android:src">@drawable/illustration</item>
    </style>

    <style name="MainFrQAmount">
        <item name="android:hint">@string/question_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_q_amount</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
    </style>

    <style name="MainFrQAmountNumber">
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_amount_number</item>
        <item name="android:text">@string/_5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainFrSeekbarMain">
        <item name="android:layout_width">@dimen/width_seekbar</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_seekBar</item>
    </style>

    <style name="MainFrHintCategory">
        <item name="android:layout_marginStart">@dimen/left_margin_hint_category</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:hint">@string/category</item>
    </style>

    <style name="MainFrSpinner">
        <item name="android:layout_width">@dimen/width_seekbar</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:layout_marginEnd">@dimen/right_margin_seekBar</item>
    </style>

    <style name="MainFrHintDiff">
        <item name="android:layout_marginStart">@dimen/left_margin_hint_category</item>
        <item name="android:layout_marginTop">@dimen/margin_q_amount</item>
        <item name="android:hint">@string/difficulty</item>
    </style>

    <style name="MainFrBtnStart">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/start_btn_background</item>
        <item name="android:text">@string/start</item>
        <item name="android:layout_marginEnd">@dimen/m_end_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tx_size_btn</item>
    </style>

    <style name="TitleSettings">
        <item name="android:text">@string/settings</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="ShareSettings">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:text">Share this app</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BlackLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="RateUs">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ClearHistory">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/holo_purple</item>
    </style>

    <style name="MultipleBtn">
        <item name="android:background">@drawable/quiz_button_background</item>
        <item name="android:textColor">@color/blue_for_btn</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:hint">colombo</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>