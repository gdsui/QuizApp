<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="history"
            type="com.arslan.quizapp.data.model.History" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/more_view"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_more" />

        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{history.category}"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/correct_answer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@{history.correctAnswers}" />

        <TextView
            android:id="@+id/difficult_tv_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="@{history.difficulty}" />

        <TextView
            android:id="@+id/data_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="120dp"
            android:text="@string/_12_may_2019_20_32" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
</layout>